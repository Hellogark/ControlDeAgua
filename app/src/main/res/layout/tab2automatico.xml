<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp"
    tools:context="com.example.edmol.webview.control">


    <TextView
        android:id="@+id/tvParametros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Establezca parametros de medidas:"
        android:textColor="@color/colorTexto"
        android:textSize="25dp" />

    <RadioGroup
        android:id="@+id/rgMedidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvParametros">

        <RadioButton
            android:id="@+id/rbLitros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:checked="true"
            android:text="Litros"
            android:textColor="@color/colorTexto"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/rbGalones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="Galones"
            android:textColor="@color/colorTexto"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/rbCubicos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="Cubicos"
            android:textColor="@color/colorTexto"
            android:textSize="25dp" />
    </RadioGroup>

    <RelativeLayout
        android:id="@+id/rlBarras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvParametros"
        android:layout_toEndOf="@+id/rgMedidas">

        <EditText
            android:id="@+id/etLitros"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:inputType="numberDecimal"
            android:visibility="visible" />

        <EditText
            android:id="@+id/etGalones"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/etLitros"
            android:layout_marginLeft="20dp"
            android:inputType="numberDecimal"
            android:visibility="visible" />

        <EditText
            android:id="@+id/etCubicos"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/etGalones"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:inputType="numberDecimal"
            android:visibility="visible" />

        <!--<com.michaelmuenzer.android.scrollablennumberpicker.ScrollableNumberPicker

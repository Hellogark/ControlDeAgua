<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp"
    tools:context=".home">

    <RelativeLayout
        android:id="@+id/barraOpciones"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/imgAjustes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ajustes" />

        <ImageView
            android:id="@+id/imgProblema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/manual" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="43dp"
            android:text="Seleccione una opción"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:layout_width="305dp"
            android:layout_height="209dp"
            android:layout_marginStart="41dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/my_border" />

        <TextView
            android:layout_width="305dp"
            android:layout_height="209dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="43dp"
            android:layout_marginTop="274dp"
            android:background="@drawable/my_border" />

        <ImageView
            android:id="@+id/controlAgua"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="45dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:src="@drawable/control_agua" />

        <ImageView
            android:id="@+id/graficaAgua"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/controlAgua"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="35dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:src="@drawable/grafico" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="144dp"
            android:layout_marginTop="278dp"
            android:layout_marginBottom="177dp"
            android:text="GRÁFICA"
            android:textColor="@color/black"
            android:textSize="24sp" />

    </RelativeLayout>


</RelativeLayout>